---
import tips from "../data/tips";
import TipContainer from "./TipContainer.astro";
---

<section class="mt-16 w-full md:mt-24 xl:px-6">
  <div
    class="gradient-bg flex w-full flex-col gap-10 px-4 py-14 md:px-10 xl:flex-row xl:gap-8 xl:px-28 xl:py-24"
  >
    {
      tips.map((tip) => (
        <TipContainer title={tip.title} description={tip.description} />
      ))
    }
  </div>
</section>

<style lang="sass">
  .gradient-bg
    background: linear-gradient(290deg, rgba(214, 230, 254, 0.25) 0%, rgba(214, 252, 254, 0.25) 100%)
</style>
