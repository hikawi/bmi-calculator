---
import limits from "../data/limits";
import PatternRightCurve from "./icons/PatternRightCurve.astro";
import LimitTab from "./LimitTab.astro";
---

<section
  class="my-[4.5rem] flex flex-col gap-4 px-6 md:my-24 md:grid md:grid-cols-4 md:gap-x-4 md:gap-y-6 md:px-10 xl:my-28 xl:grid-cols-12 xl:gap-8 xl:px-32"
>
  <div
    class="mb-10 flex flex-col gap-8 md:col-span-4 md:text-center xl:col-span-6 xl:text-left"
  >
    <h2
      class="heading-l text-[2rem] tracking-[-0.1rem] xl:text-[3rem] xl:tracking-[-0.15rem]"
    >
      {limits.headline}
    </h2>
    <p class="body-m text-dark-electric-blue">{limits.body}</p>
  </div>

  <div
    class="col-start-3 row-start-2 hidden -translate-x-1/2 -translate-y-1/3 xl:block"
  >
    <PatternRightCurve />
  </div>

  {limits.limits.map((limit) => <LimitTab {...limit} />)}
</section>
